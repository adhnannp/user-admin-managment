<% include('../layouts/header.ejs') %> 
<style>
    body {
        background-color: #f0e68c; /* Light Khaki background */
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        font-family: 'Arial', sans-serif;
    }
    .container {
        background-color: #fffacd; /* Lemon Chiffon */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        width: 400px;
    }
    h1 {
        color: #ff8c00; /* Dark Orange */
        margin-bottom: 20px;
    }
    .profile-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        margin-top: 10px;
        margin-bottom: 20px;
        object-fit: cover;
    }
    p {
        margin: 5px 0;
        color: #333;
    }
    .label {
        font-weight: bold;
        color: #ff8c00; /* Dark Orange */
    }
    button.btn {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        color: white;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    button.btn-dashboard {
        background-color: #4682b4; /* Steel Blue */
    }
    button.btn-dashboard:hover {
        background-color: #4169e1; /* Royal Blue */
    }
    button.btn-danger {
        background-color: #d9534f;
    }
    button.btn-danger:hover {
        background-color: #c9302c;
    }
</style>
<div class="container">
<h1>Welcome <br> <%= admin.name %></h1>
<img src="/userImages/<%= admin.image %>" alt="No image" class="profile-image">
<p><span class="label">Name:</span> <%= admin.name %></p>
<p><span class="label">Email:</span> <%= admin.email %></p>
<p><span class="label">Phone Number:</span> <%= admin.mobile %></p>
<form action="/admin/dashboard" method="get">
    <button type="submit" class="btn btn-dashboard">Dashboard</button>
</form>
<form action="/admin/logout" method="get">
    <button type="submit" class="btn btn-danger">Log out</button>
</form>
</div>
<script type="text/javascript">
    function preventBack() { window.history.forward(); }
    setTimeout("preventBack()", 0);
    window.onunload = function () { null };
</script>
<% include('../layouts/footer.ejs') %>