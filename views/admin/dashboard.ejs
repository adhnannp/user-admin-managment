<% include('../layouts/header.ejs') %>
<style>
    body {
        background-color: #d0e7f9;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        font-family: 'Arial', sans-serif;
    }
    .container {
        background-color: #e6f7ff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 80%;
        max-width: 1200px;
        margin: auto;
    }
    h1 {
        color: #004d99; /* Darker color for the heading */
        text-align: center;
        margin-bottom: 20px;
    }
    .search-bar {
        text-align: center;
        margin-bottom: 20px;
    }
    .search-bar input {
        padding: 10px;
        width: 80%;
        max-width: 600px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 30px;
    }
    th, td {
        padding: 10px;
        text-align: center;
    }
    th {
        background-color: #f0e68c;
    }
    tr:nth-child(even) {
        background-color: #f9f9f9;
    }
    td img {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 50%;
    }
    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        color: white;
        cursor: pointer;
        transition: background-color 0.3s ease;
        font-size: 0.9rem;
        font-weight: bold;
    }
    .btn-go-back {
        background-color: #007bff;
    }
    .btn-go-back:hover {
        background-color: #0056b3;
    }
    .btn-add-user {
        background-color: #28a745;
    }
    .btn-add-user:hover {
        background-color: #218838;
    }
    .btn-edit {
        background-color: #007bff; /* Blue color */
        color: white;
        padding: 5px 10px;
        font-size: 0.8rem;
        text-decoration: none;
        display: inline-block;
        border-radius: 5px;
    }
    .btn-edit:hover {
        background-color: #0056b3;
    }
    .btn-delete {
        background-color: #dc3545; /* Red color */
        color: white;
        padding: 5px 10px;
        font-size: 0.8rem;
        text-decoration: none;
        display: inline-block;
        border-radius: 5px;
    }
    .btn-delete:hover {
        background-color: #c82333;
    }
    .button-group {
        display: flex;
        justify-content: space-between;
        margin-bottom: 30px;
    }
    .button-group .btn {
        margin: 0;
        font-size: 1rem;
    }
    .button-group .btn-go-back {
        margin-left: 0;
    }
    .button-group .btn-add-user {
        margin-right: 0;
    }
</style>
<div class="container">
    <h1>DASHBOARD</h1>

    <div class="button-group">
        <form action="/admin/home" method="get">
            <button type="submit" class="btn btn-go-back">
                <span>&larr;</span> Go Back
            </button>
        </form>
        <form action="/admin/add-user" method="get">
            <button type="submit" class="btn btn-add-user">ADD NEW USER</button>
        </form>
    </div>

    <div class="search-bar">
        <input type="text" id="searchInput" placeholder="Search for users by mobile, email, or name...">
    </div>

    <table>
        <thead>
            <tr>
                <th>No:</th>
                <th>Profile</th>
                <th>Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody id="userTable">
            <% if (users.length > 0) { %>
                <% for (let i = 0; i < users.length; i++) { %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><img src="/userImages/<%= users[i].image %>" alt="No image"></td>
                        <td><%= users[i].name %></td>
                        <td><%= users[i].email %></td>
                        <td><%= users[i].mobile %></td>
                        <td>
                            <a href="/admin/edit-user?id=<%= users[i]._id %>" class="btn btn-edit">Edit</a>
                        </td>
                        <td>
                            <a href="/admin/delete-user?id=<%= users[i]._id %>" class="btn btn-delete">Delete</a>
                        </td>
                    </tr>
                <% } %>
            <% } else { %>
                <tr>
                    <td colspan="7">User Not Found</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
<script>
    document.getElementById('searchInput').addEventListener('keyup', function() {
        var input = document.getElementById('searchInput');
        var filter = input.value.toLowerCase();
        var table = document.getElementById('userTable');
        var trs = table.getElementsByTagName('tr');

        for (var i = 0; i < trs.length; i++) {
            var tds = trs[i].getElementsByTagName('td');
            var showRow = false;

            for (var j = 0; j < tds.length; j++) {
                var td = tds[j];
                if (td && td.innerText.toLowerCase().indexOf(filter) > -1) {
                    showRow = true;
                    break;
                }
            }

            if (showRow) {
                trs[i].style.display = '';
            } else {
                trs[i].style.display = 'none';
            }
        }
    });
</script>
<script type="text/javascript">
    function preventBack() { window.history.forward(); }
    setTimeout("preventBack()", 0);
    window.onunload = function () { null };
</script>
